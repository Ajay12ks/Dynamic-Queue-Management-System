<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>DBConnectionTest</servlet-name>
        <servlet-class>com.queue.servlet.DBConnectionTest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DBConnectionTest</servlet-name>
        <url-pattern>/testdb</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookTokenServlet</servlet-name>
        <servlet-class>com.queue.servlet.BookTokenServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookTokenServlet</servlet-name>
        <url-pattern>/bookToken</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewQueueServlet</servlet-name>
        <servlet-class>com.queue.servlet.ViewQueueServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewQueueServlet</servlet-name>
        <url-pattern>/viewQueue</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.queue.servlet.AdminLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.queue.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminSignupServlet</servlet-name>
        <servlet-class>com.queue.servlet.AdminSignupServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminSignupServlet</servlet-name>
        <url-pattern>/adminSignup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateQueueServlet</servlet-name>
        <servlet-class>com.queue.servlet.CreateQueueServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateQueueServlet</servlet-name>
        <url-pattern>/createQueue</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewQueueListServlet</servlet-name>
        <servlet-class>com.queue.servlet.ViewQueueListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewQueueListServlet</servlet-name>
        <url-pattern>/viewQueueList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CallNextServlet</servlet-name>
        <servlet-class>com.queue.servlet.CallNextServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CallNextServlet</servlet-name>
        <url-pattern>/callNext</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.queue.filter.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/adminDashboard.jsp</url-pattern>
    </filter-mapping>

</web-app>
